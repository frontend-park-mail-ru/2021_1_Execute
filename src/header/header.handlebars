<div align="left" class="header-container">
  <div class="header-container-left">
  </div>

  <div align="center" class="header-container-center">
    <picture class="header-container-center-elem">
      <source style="display: none" media="(max-width: 505px)" srcset="/extinguisher_removedbg.png">
      <img class="header-container-center-elem" src="/hello_removedbg.png">
    </picture>
  </div>

  <div class="header-container-right">
    {{#if authorized}}
    {{!-- <img id="avatar-photo" class="profile-avatar-photo" src="/not-available.png"> --}}
    <div class="header-container-right-elem profile-avatar-small">
      <img id="avatar-photo" class="profile-avatar-photo" src="{{ avatarUrl }}" onerror='this.src="/not-available.png"'>
    </div>
    {{else}}
    <button id="enter" class="menu-btn menu-btn-success">Войти</button>
    {{/if}}
  </div>
</div>