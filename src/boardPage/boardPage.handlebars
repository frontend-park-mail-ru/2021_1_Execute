{{#*inline "task" task}}
<div id="task-{{id}}" class="task">
    {{name}}
</div>
{{/inline}}

{{#*inline "row" row}}
<div class="row">
    <div class="row-name">
        {{name}}
    </div>
    <div class="tasks-container">
        {{#each tasks}}
            {{> task task=this}}
        {{/each}}
    </div>
    <div id="add-card-to-{{id}}"class="add-card-button">
        Добавить карточку
    </div>
</div>
{{/inline}}

{{#*inline "task-popup" task row}}
<div class  ="popup-module menu-wrapper-column ">
    <div class="popup-content">
        <div class="close-icon-div btn-icon-div">
            <svg class="btn-icon" viewBox="0 0 32 32" width="24" height="24"><defs><style>.cls-1{fill:none;stroke:#000;stroke-linecap:round;stroke-linejoin:round;stroke-width:2px;}</style>
            </defs><title/><g><line class="cls-1" x1="7" x2="25" y1="7" y2="25"/><line class="cls-1" x1="7" x2="25" y1="25" y2="7"/></g></svg>
        </div>
        <div class="task-header">
            <span class="span-textarea" role="textbox" contenteditable >{{task.name}}</span>
            <div class="task-row-name">В колонке {{row.name}}</div>
        </div>
        <div class="task-description-heading">Описание:</div>
        <span class="span-textarea" role="textbox" contenteditable>{{task.description}}</span>
    </div>
</div>
{{/inline}}

{{#*inline "board-popup" board}}
<div class="popup-module menu-wrapper-column ">
    <div class="popup-content">
        <div class="close-icon-div btn-icon-div">
            <svg class="btn-icon" viewBox="0 0 32 32" width="24" height="24"><defs><style>.cls-1{fill:none;stroke:#000;stroke-linecap:round;stroke-linejoin:round;stroke-width:2px;}</style>
            </defs><title/><g id="cross"><line class="cls-1" x1="7" x2="25" y1="7" y2="25"/><line class="cls-1" x1="7" x2="25" y1="25" y2="7"/></g></svg>
        </div>
        <span class="span-textarea board-name" role="textbox" contenteditable >{{name}}</span>
        <div class="task-description-heading">Описание доски:</div>
        <span class="span-textarea" role="textbox" contenteditable>{{description}}</span>
    </div>
</div>
{{/inline}}

{{#*inline "avatars" avatars isMore counter}}
{{#each avatars}}
    <img class="rounded-avatar board-panel-element" src={{this.avatar}}>
{{/each}}
{{#if isMore}}
<div id="additional-people-icon" class="board-panel-element">+{{counter}}</div>
{{/if}}
{{/inline}}


