{
    "env": {
        "browser": true,
        "es2020": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "ignorePatterns": [
        "*.handlebars.js"
    ],
    "rules": {
        "curly": [
            "error",
            "all"
        ],
        "brace-style": [
            "error",
            "1tbs"
        ],
        "import/extensions": [
            "error",
            "always"
        ],
        "no-new": "off",
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "max-classes-per-file": "off",
        "class-methods-use-this":"off"
    }
}
